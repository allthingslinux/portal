{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "extends": [
    "ultracite/biome/core",
    "ultracite/biome/react",
    "ultracite/biome/next"
  ],
  "linter": {
    "rules": {
      "performance": {
        "noBarrelFile": "error",
        "noNamespaceImport": "error"
      }
    }
  },
  "overrides": [
    {
      "includes": [
        "src/shared/schemas/index.ts",
        "src/shared/schemas/integrations/index.ts",
        "src/features/integrations/api/index.ts",
        "src/features/user/api/index.ts",
        "src/features/admin/api/index.ts",
        "src/shared/api/index.ts",
        "src/shared/types/api.ts",
        "src/app/metadata.ts"
      ],
      "linter": {
        "rules": {
          "performance": {
            "noBarrelFile": "off"
          }
        }
      }
    },
    {
      "includes": [
        "src/features/**/implementation.ts",
        "src/features/**/lib/config.ts",
        "src/features/**/client.ts",
        "src/features/**/unreal/client.ts",
        "src/features/**/components/*.tsx",
        "src/app/**/integrations-content.tsx",
        "src/sentry.*.ts"
      ],
      "linter": {
        "rules": {
          "performance": {
            "noNamespaceImport": "off"
          }
        }
      }
    }
  ],
  "assist": {
    "actions": {
      "source": {
        "organizeImports": {
          "level": "on",
          "options": {
            "groups": [
              // URLs first (rare but important)
              ":URL:",
              // Node.js and Bun built-ins
              ":BUN:",
              ":NODE:",
              // React ecosystem (prioritized)
              [
                "react",
                "react-dom",
                "react/**",
                "@types/react",
                "@types/react-dom"
              ],
              // UI and styling libraries
              [
                "@radix-ui/**",
                "lucide-react",
                "sonner",
                "tailwindcss",
                "class-variance-authority"
              ],
              // Next.js specific
              ["next", "next/**", "@next/**"],
              // Form and validation
              ["react-hook-form", "@hookform/resolvers", "zod"],
              // Other packages
              ":PACKAGE:",
              // Blank line separator
              ":BLANK_LINE:",
              // Internal aliases by specificity
              ["@/components/ui", "@/components/ui/**"],
              ["@/components", "@/components/**"],
              ["@/hooks", "@/hooks/**"],
              ["@/lib", "@/lib/**"],
              ["@/auth", "@/auth/**"],
              ["@/db", "@/db/**"],
              // Relative imports last
              ":PATH:"
            ],
            "identifierOrder": "natural"
          }
        }
      }
    }
  },
  "files": {
    "includes": [
      "!src/components/react-scan.tsx",
      "!references",
      "!src/components/ui",
      "!drizzle",
      "!.cursor/skills"
    ]
  }
}
